<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.ilib.AdminMenu.Member.ControllerAddMemberDetail">
   <children>
      <Label layoutX="50.0" layoutY="40.0" text="Fullname:" textFill="#17be2e">
         <font>
            <Font name="Comic Sans MS" size="20.0" />
         </font>
      </Label>
      <Label layoutX="50.0" layoutY="100.0" text="Email address:" textFill="#17be2e">
         <font>
            <Font name="Comic Sans MS" size="20.0" />
         </font>
      </Label>
      <Label layoutX="50.0" layoutY="160.0" text="Phone number:" textFill="#17be2e">
         <font>
            <Font name="Comic Sans MS" size="20.0" />
         </font>
      </Label>
      <Label layoutX="50.0" layoutY="220.0" text="Password:" textFill="#17be2e">
         <font>
            <Font name="Comic Sans MS" size="20.0" />
         </font>
      </Label>
      <Label layoutX="50.0" layoutY="280.0" text="Role:" textFill="#17be2e">
         <font>
            <Font name="Comic Sans MS" size="20.0" />
         </font>
      </Label>
      <TextField fx:id="userFullname" layoutX="226.0" layoutY="41.0" prefHeight="25.0" prefWidth="321.0" promptText="Ex: William Birkin">
         <font>
            <Font name="Comic Sans MS Italic" size="12.0" />
         </font>
      </TextField>
      <TextField fx:id="userEmailAddress" layoutX="226.0" layoutY="101.0" prefHeight="25.0" prefWidth="321.0" promptText="Ex: Birkin@gmail.com">
         <font>
            <Font name="Comic Sans MS Italic" size="12.0" />
         </font>
      </TextField>
      <TextField fx:id="userPhoneNumber" layoutX="226.0" layoutY="162.0" prefHeight="25.0" prefWidth="321.0" promptText="0123xxxxxx">
         <font>
            <Font name="Comic Sans MS Italic" size="12.0" />
         </font>
      </TextField>
      <TextField fx:id="userPassword" layoutX="226.0" layoutY="222.0" prefHeight="25.0" prefWidth="321.0" promptText="Ex: 123456789">
         <font>
            <Font name="Comic Sans MS Italic" size="12.0" />
         </font>
      </TextField>
      <RadioButton fx:id="userRoleAsAdmin" layoutX="226.0" layoutY="286.0" mnemonicParsing="false" text="Admin">
          <toggleGroup>
              <ToggleGroup fx:id="toggleGroup" />
          </toggleGroup>
         <font>
            <Font name="Comic Sans MS" size="12.0" />
         </font>
      </RadioButton>
      <RadioButton fx:id="userRoleAsUser" layoutX="343.0" layoutY="285.0" mnemonicParsing="false" text="user" toggleGroup="$toggleGroup">
         <font>
            <Font name="Comic Sans MS" size="12.0" />
         </font>
      </RadioButton>
      <Button fx:id="acceptButton" layoutX="47.0" layoutY="338.0" mnemonicParsing="false" onMouseClicked="#acceptButtonClicked" prefHeight="25.0" prefWidth="117.0" text="Accept">
         <font>
            <Font name="Comic Sans MS Bold" size="12.0" />
         </font>
      </Button>
      <Button fx:id="cancelButton" layoutX="431.0" layoutY="338.0" mnemonicParsing="false" onMouseClicked="#cancelButtonClicked" prefHeight="25.0" prefWidth="117.0" text="Clear">
         <font>
            <Font name="Comic Sans MS Bold" size="12.0" />
         </font>
      </Button>
      <Separator layoutX="50.0" layoutY="85.0" prefHeight="0.0" prefWidth="495.0" />
      <Separator layoutX="50.0" layoutY="145.0" prefHeight="3.0" prefWidth="495.0" />
      <Separator layoutX="50.0" layoutY="205.0" prefHeight="3.0" prefWidth="495.0" />
      <Separator layoutX="50.0" layoutY="265.0" prefHeight="3.0" prefWidth="495.0" />
      <Label fx:id="alertField" layoutX="185.0" layoutY="338.0" prefHeight="26.0" prefWidth="225.0" text="">
         <font>
            <Font name="Comic Sans MS Italic" size="12.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
